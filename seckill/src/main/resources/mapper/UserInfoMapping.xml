<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.geek.ms.mapper.UserInfoMapper">

	<select id="selectAllUserInfo" resultType="com.geek.ms.model.UserInfo">
		SELECT * FROM user_info where user_id=#{id}
	</select>

	<select id="selectAllUserInfoDetail" resultType="com.geek.ms.model.UserInfoDetail">
		SELECT * FROM user_info_detail
	</select>
	
	<update id="updateUserInfoByUserId" parameterType="com.geek.ms.model.UserInfo">
		UPDATE user_info 
		SET realName = #{realName},
		phone = #{phone},
		birthday = #{birthday},
		email = #{email},
		nation = #{nation},
		idNumber = #{idNumber},
		address = #{address} 
		WHERE
			user_id = #{userId}
	</update>

</mapper>